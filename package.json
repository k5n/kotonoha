{
  "name": "kotonoha",
  "version": "0.1.3",
  "description": "An app for language learning, centered around AI-powered sentence mining.",
  "author": "Keigo Nakatani <k5n@users.noreply.github.com> (https://github.com/k5n)",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:browser": "VITE_RUN_MODE=browser vite dev",
    "build": "tauri build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run --project nodejs",
    "test:nodejs": "vitest run --project nodejs",
    "test:browser": "vitest run --project browser",
    "test:all": "vitest run && npm run report:coverage",
    "report:coverage": "nyc report --reporter=html --temp-directory=coverage/",
    "tauri": "tauri",
    "lint": "eslint src tools",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format-lint-check": "npm run format && npm run lint && npm run check",
    "generate:graph": "tsx ./tools/generate-dependency-graph.ts"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.4.0",
    "@tauri-apps/plugin-fs": "^2.4.0",
    "@tauri-apps/plugin-http": "^2.5.2",
    "@tauri-apps/plugin-log": "^2.5.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-sql": "^2.2.1",
    "@tauri-apps/plugin-store": "^2.3.0",
    "@tauri-apps/plugin-stronghold": "^2.3.0",
    "@thisux/sveltednd": "^0.0.20",
    "dompurify": "^3.2.6",
    "i18next": "^25.3.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.1.10",
    "@tauri-apps/cli": "^2.7.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/glob": "^8.1.0",
    "@types/sql.js": "^1.4.9",
    "@types/youtube": "^0.1.2",
    "@vitest/browser-playwright": "^4.0.8",
    "@vitest/eslint-plugin": "^1.4.1",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-mocha": "^11.2.0",
    "eslint-plugin-svelte": "^3.9.2",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.7.1",
    "flowbite-svelte-icons": "^2.2.1",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "sql.js": "^1.13.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.0.3",
    "vite-plugin-istanbul": "^7.2.0",
    "vitest": "^4.0.8",
    "vitest-browser-svelte": "^2.0.1"
  }
}
