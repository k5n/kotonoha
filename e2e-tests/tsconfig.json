{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@wdio/globals/types", "mocha", "node"],
    "allowJs": false,
    "checkJs": false
  },
  "include": ["wdio.conf.ts", "specs/**/*.ts"],
  "exclude": ["node_modules"]
}
